{% extends 'base.html.twig' %}

{% block title %} List of Command {% endblock %}

{% block body %}
<h1>List of Command</h1>

<table class="table">
    <thead>
        <tr>

        <th>coId</th>

        <th>coLabel</th>

        <th>coDate</th>

        <th>coPrix</th>

        <th>client</th>

        <th>produits</th>

        </tr>
    </thead>

    <tbody>
    {% for command in commands %}
        <tr>

        <td>{{ command.coId  }}</td>

        <td>{{ command.coLabel  }}</td>

        <td>{{ command.coDate|date('d/m/Y H:i')  }}</td>

        <td>{{ command.coPrix  }}</td>

        <td>{{ command.client  }}</td>

<td>
        <ul>
                {% for produit in command.produits %}
                <li>{{ produit }}
                {% else %}
                <li>Any produit</li>
                {% endfor %}
        </ul>

</td>


        <td>
            <a href="{{ path('command_edit', {id: command.coId}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è</a>
        </td>

        <td>
            <form action="{{ path('command_delete', {id: command.coId}) }}" method="post" onsubmit="return confirm('Delete this command ?');">
                <button class="btn btn-danger btn-sm">üóëÔ∏è</button>
            </form>
        </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<div class="create-btn-container">
    <a href="/command/create">
            <button type="button">Cr√©er</button>
        </a>
    <a href="/">
        <button type="button">Revenir a l'index global</button>
    </a>
</div>
{% endblock %}
